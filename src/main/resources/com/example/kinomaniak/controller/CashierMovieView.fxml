<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.kinomaniak.controller.CashierMovieViewController"
            prefHeight="400.0" prefWidth="600.0" gridLinesVisible="true"
            stylesheets="@../css/CashierMovieView.css">
    <padding><Insets right="25" left="25"/></padding>
    <Pane GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" prefHeight="50">
        <VBox>
            <TextField fx:id="searchTextField" promptText="Enter title..." prefWidth="550"/>
            <HBox>
                <Label text="genre:"/>
                <ComboBox fx:id="genreComboBox"/>
                <Label text="age limit:"/>
                <ComboBox fx:id="ageRestrictionComboBox"/>
                <Button fx:id="recommendedMoviesButton" text="Recommended Movies" onAction="#showRecommendedMovies"/>
            </HBox>

        </VBox>

    </Pane>

    <TableView fx:id="moviesTable" prefHeight="350" prefWidth="550" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="160.0" resizable="false" text="Title"/>
            <TableColumn fx:id="directorColumn" prefWidth="160.0" resizable="false" text="Director" />
            <TableColumn fx:id="premierDateColumn" prefWidth="90.0" resizable="false" text="Premier Date" />
            <TableColumn fx:id="durationColumn" prefWidth="60.0" resizable="false" text="Duration" />
            <TableColumn fx:id="ageRestrictionColumn" prefWidth="65.0" resizable="false" text="Age Limit" />

        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>


    <Pane fx:id="bottomPane" GridPane.rowIndex="2" prefHeight="0" visible="false" >
    <HBox >
        <Label text="image" prefWidth="150"/>
        <TextArea fx:id="descriptionTextArea" editable="false" wrapText="true" text="description" prefWidth="300" prefHeight="100"/>
        <VBox alignment="TOP_RIGHT">
            <Button fx:id="hideBottomPaneButton" prefWidth="20" prefHeight="20"  text="X" onAction="#removeSelection"/>
            <Button fx:id="showScreeningsButton" prefWidth="100" text="find Screening"/>

        </VBox>
    </HBox>
    </Pane>
</GridPane>

