<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.kinomaniak.controller.ManagerMovieViewController"
          prefHeight="400.0" prefWidth="600.0" alignment="BASELINE_CENTER">
    <padding><Insets right="25" left="25" top="10"/></padding>
    <VBox>
        <HBox alignment="BASELINE_CENTER" >
            <Button fx:id="addMovieBtn" text="Add movie" onAction="#showAddMovieForm" />
            <Button fx:id="removeMovieBtn" text="Remove movie" onAction="#removeMovie" />
            <padding><Insets right="25" left="25" bottom="20"/></padding>
        </HBox>
        <VBox fx:id="addMovieForm" visible="false" alignment="BASELINE_CENTER"  spacing="10">
            <Label text="ADD NEW FILM" />
            <HBox>
                <Label text="Title" prefWidth="100.0">
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>

                <TextField fx:id="movieTitle" prefWidth="350.0">
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <HBox>
                <Label text="Director" prefWidth="100.0">
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="nameOfDirector" prefWidth="350.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <HBox>
                <Label text="Description" prefWidth="100.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="movieDescription" prefWidth="350.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <HBox>
                <Label text="Category" prefWidth="100.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <TilePane fx:id="categoryTilePane" prefWidth="350.0">
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </TilePane>
            </HBox>
            <HBox>
                <Label text="Duration" prefWidth="100.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <Spinner fx:id="durationSpinner" prefWidth="350.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Spinner>
            </HBox>
            <HBox>
                <Label text="Premier date" prefWidth="100.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <DatePicker fx:id="premierDatePicker" prefWidth="350.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </DatePicker>
            </HBox>
            <HBox>
                <Label text="Age Restriction" prefWidth="100.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="ageRestrictionComboBox" prefWidth="350.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </ComboBox>
            </HBox>
            <HBox>
                <Label text="Poster URL" prefWidth="100.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="moviePosterURL" prefWidth="350.0" >
                    <HBox.margin>
                        <Insets bottom="8.0" top="8.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <Label fx:id="addMovieErrorPrompt" styleClass="error" />
            <Button fx:id="submitAddingMovieBtn" text="Submit" onMouseClicked="#addMovieToProgram" prefWidth="100" />
        </VBox>
    </VBox>


</GridPane>
